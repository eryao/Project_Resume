<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/edit_basic_info_user_picture_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picture_height"
        android:background="?attr/selectableItemBackground">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/user_picture_chooser_background"
            />
        <ImageView
            android:id="@+id/edit_basic_info_user_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/picture_height"
            android:src="@drawable/user_ghost"
            android:scaleType="fitCenter"
            android:contentDescription="Choose your picture" />
        <!--<ImageView-->
            <!---->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom|right"-->
            <!--android:layout_marginBottom="@dimen/spacing_medium"-->
            <!--android:layout_marginRight="@dimen/spacing_medium"-->
            <!--android:src="@drawable/ic_camera_alt_white_24dp"-->
            <!--android:contentDescription="@null"/>-->

    </FrameLayout>

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Your Name"/>


    <EditText
        android:id="@+id/edit_user_email"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:hint="Please Enter Your Email" />



</LinearLayout>
